<h1>Project title: <%= @project.title %></h1><hr>
<h4>Project ID: <%= @project.id %></h4>

  <form action="/projects/<%= @project.id %>" method="post">
    <div class="form-group">
      <label for="project">Update Title</label>
      <input id="project" name="title" class="form-control" type="info" required>
    </div>
    <button type="submit" class="btn btn-light">Update</button>
  </form><br>

<% if @volunteers.any? %>
  <h2>Volunteers</h2>
    <table class="table table-striped"> 
    <thead>
      <tr>
        <th scope="col">#</div>
        <th scope="col">name</div>
      </tr>
    </thead>
    <tbody>
    <% @volunteers.each do |volunteer| %>
      <tr>
        <td><a class="btn btn-dark" href="/volunteers/<%= volunteer.id %>"><%= volunteer.id %></td>
        <td><%= volunteer.name %></td>
      </tr>
    <% end %>
    </tbody>
    </table>
  <% else %>
  <P>No Volunteers assigned to this project.</p>
  <% end %>


<form action="/projects/<%= @project.id %>" method="post">
  <div class="form-group">
    <label for="volunteer">Volunteer name</label>
    <input id="volunteer" name="name" class="form-control" type="info" required>
  </div>
  <button type="submit" class="btn btn-success">Add Volunteer</button>
</form><br>

<form action="/projects/<%= @project.id %>" method="post">
  <input name="_method" value="delete" type="hidden">
  <button type='submit' class="btn btn-danger">Delete project</button>
</form><br>

<a href="/projects" class="btn btn-info">Back To Projects</a>

